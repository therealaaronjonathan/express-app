extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="css/product.css")

block content
    main 
        .grid 
            each products in prods 
                article.card.product-item 
                    header.card__header 
                        h1.product__title #{products.title}
                    div.card__image
                        img(src="https://img.freepik.com/free-photo/book-composition-with-open-book_23-2147690555.jpg", alt="A book")
                    div.card-content 
                        h2.product__price $19.99
                        p.product__description Interesting book about interesting things!
                    .card__actions  
                        button.btn Add to Card
